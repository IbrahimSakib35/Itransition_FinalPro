<h1>User Management</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>Blocked</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
        <td><%= user.blocked? %></td>
        <td>
          <% unless user == current_user %>
            <% if user.admin? %>
              <%= link_to 'Remove Admin', remove_admin_admin_user_path(user), method: :post %>
            <% else %>
              <%= link_to 'Add Admin', add_admin_admin_user_path(user), method: :post %>
            <% end %>
            <% if user.blocked? %>
              <%= link_to 'Unblock', unblock_admin_user_path(user), method: :post %>
            <% else %>
              <%= link_to 'Block', block_admin_user_path(user), method: :post %>
            <% end %>
            <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
