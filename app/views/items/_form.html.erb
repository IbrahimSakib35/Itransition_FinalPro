<%= form_with(model: [@collection, @item], local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :tags %>
  </div>
  <div class="field">
    <%= form.label :collection_id %>
    <%= form.collection_select :collection_id, current_user.collections, :id, :name, prompt: true %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
